@startuml 用户认证流程

start

:访问网站;
if (是否已登录？) then (是)
  :显示主页面;
else (否)
  :显示登录/注册页面;
  if (选择注册？) then (是)
    :填写注册信息;
    if (用户名是否可用？) then (是)
      :创建用户账户;
      :注册成功;
    else (否)
      :提示用户名已存在;
      :返回重新注册;
    endif
  else (选择登录)
    :输入用户名密码;
    if (验证通过？) then (是)
      :生成Token;
      :登录成功;
      :跳转主页;
    else (否)
      :提示登录失败;
      :返回重新登录;
    endif
  endif
endif

stop

@enduml