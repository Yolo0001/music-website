@startuml 后台管理流程

start

:管理员登录;
if (权限验证？) then (失败)
  :拒绝访问;
  stop
else (成功)
  :进入管理后台;
endif

:选择管理模块;

if (用户管理) then
  :查看用户列表;
  :执行操作(封禁/授权);
else if (歌曲管理)
  :上传/下架歌曲;
  :审核歌曲信息;
else if (歌单管理)
  :审核用户歌单;
  :推荐歌单设置;
else if (评论管理)
  :审核用户评论;
  :删除违规内容;

endif

:更新数据库;
:记录操作日志;
:返回结果;

stop

@enduml